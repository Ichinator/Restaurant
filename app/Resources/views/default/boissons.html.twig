{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent ()}}
{% endblock %}
{% block body %}
    {{ parent ()}}


    <div class="container">
        <div class="row">
            {% for boissons in boissons %}
                <div class="col-sm-4">
                    {% if boissons.enabled %}
                        <div class="card" style="width:400px">
                            <img class="card-img-top rounded img-fluid"
                                 src="{{ vich_uploader_asset(boissons, 'imageFile') }}" alt="{{ boissons.image }}"
                                 alt="Card image">
                            <div class="card-body">
                                <h4 class="card-title">{{ boissons.name }}</h4>
                                <p class="card-text">{{ boissons.prix }} â‚¬</p>
                                <a href="{{ path('showOneBoisson', { 'id': boissons.id }) }}" class="btn btn-primary">See
                                    Profile</a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}